@model IEnumerable<sb_light_admin.BL.Repositories.DepartmentMirror>


@{
    ViewBag.Title = "Read";
}

<h2>Department Page</h2>

<form class="form-group" asp-controller="Department" asp-action="Search">
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            @*this is how to pass a variable (object) from controller to view and link it to localization file*@
            <div class="col-lg-8"><h3>@ViewBag.TargetMsg</h3></div>

            <div class="col-lg-2"></div>
        </div>
    </div>
</form>


<a asp-controller="Department" asp-action="Create" class="btn btn-success">@SharedLocalizer["CreateDepartment"]</a>
<a asp-controller="Employee" asp-action="Index" class="btn btn-warning">@SharedLocalizer["EmployeeSection"]</a>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover table-sm" id="dataTables-example">
                    <thead>
                        <tr>
                            <th scope="col">@SharedLocalizer["DepartmentId"]</th>
                            <th scope="col">@SharedLocalizer["DepName"]</th>
                            <th scope="col">@SharedLocalizer["DepartmentCode"]</th>
                            <th scope="col">@SharedLocalizer["Activity"]</th>
                            <th scope="col">@SharedLocalizer["Controllers"]</th>
                            <th scope="col">@SharedLocalizer["Controllers"]</th>
                            <th scope="col">@SharedLocalizer["Controllers"]</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)

                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.DepartmentName</td>
                                <td>@item.DepartmentCode</td>
                                <td>@item.IsActive</td>
                                <td><a asp-controller="Department" asp-action="Update" class="btn btn-primary" asp-route-id="@item.Id">@SharedLocalizer["update"]</a></td>

                                <td><a asp-controller="Department" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">@SharedLocalizer["delete"]</a></td>

                                <td><a asp-controller="Department" asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">@SharedLocalizer["details"]</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@section jquery_data_table
{
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true,
                paging: true,
                retrieve: true,
                searching: true
            });
        });
    </script>

}

